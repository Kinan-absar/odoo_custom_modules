<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Main App Menu -->
    <menuitem id="petty_cash_main_app"
              name="Petty Cash"
              sequence="10"
              web_icon="petty_cash_management,static/description/icon.png"/>

    <!-- Reports -->
    <menuitem id="menu_petty_cash_reports"
              name="Petty Cash Reports"
              parent="petty_cash_main_app"
              action="action_petty_cash"/>

    <!-- Categories -->
    <menuitem id="menu_petty_cash_categories"
              name="Categories"
              parent="petty_cash_main_app"
              action="action_petty_cash_category"/>

    <record id="action_petty_cash_config" model="ir.actions.server">
        <field name="name">Petty Cash Configuration</field>
        <field name="model_id" ref="model_petty_cash_config"/>
        <field name="state">code</field>
        <field name="code">
    action = {
        'type': 'ir.actions.act_window',
        'res_model': 'petty.cash.config',
        'view_mode': 'form',
        'res_id': env['petty.cash.config'].get_singleton().id,
        'target': 'current',
    }
        </field>
    </record>


    <menuitem id="menu_petty_cash_config"
            name="Configuration"
            parent="petty_cash_main_app"
            action="action_petty_cash_config"
                sequence="99"
                groups="petty_cash_management.group_petty_cash_accountant"/>

</odoo>
