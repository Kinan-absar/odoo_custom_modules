<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_petty_cash" model="ir.ui.view">
        <field name="name">res.config.settings.view.petty.cash</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>  <!-- IMPORTANT -->
        <field name="arch" type="xml">

            <!-- Insert inside Accounting settings -->
            <xpath expr="//div[contains(@class, 'o_setting_container')]" position="inside">

                <div class="app_settings_block" data-string="Petty Cash">
                    <h2>Petty Cash</h2>

                    <div class="row mt16">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left">
                                <label for="petty_cash_account_id"/>
                            </div>
                            <div class="o_setting_right">
                                <field name="petty_cash_account_id"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left">
                                <label for="input_vat_account_id"/>
                            </div>
                            <div class="o_setting_right">
                                <field name="input_vat_account_id"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left">
                                <label for="petty_cash_journal_id"/>
                            </div>
                            <div class="o_setting_right">
                                <field name="petty_cash_journal_id"/>
                            </div>
                        </div>

                    </div>

                </div>

            </xpath>

        </field>
    </record>

</odoo>
