<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="res_config_settings_view_petty_cash" model="ir.ui.view">
        <field name="name">res.config.settings.view.petty.cash</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='settings']" position="inside">

                <div class="app_settings_block"
                    string="Petty Cash"
                    app="petty_cash_management">

                    <h2>Petty Cash</h2>

                    <div class="o_settings_container">

                        <div class="o_setting_box">
                            <div class="o_setting_left">
                                <label for="petty_cash_account_id"/>
                            </div>
                            <div class="o_setting_right">
                                <field name="petty_cash_account_id"/>
                            </div>
                        </div>

                        <div class="o_setting_box">
                            <div class="o_setting_left">
                                <label for="input_vat_account_id"/>
                            </div>
                            <div class="o_setting_right">
                                <field name="input_vat_account_id"/>
                            </div>
                        </div>

                        <div class="o_setting_box">
                            <div class="o_setting_left">
                                <label for="petty_cash_journal_id"/>
                            </div>
                            <div class="o_setting_right">
                                <field name="petty_cash_journal_id"/>
                            </div>
                        </div>

                    </div>
                </div>

            </xpath>
        </field>
    </record>


</odoo>
