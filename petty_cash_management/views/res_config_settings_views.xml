<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_petty_cash" model="ir.ui.view">
        <field name="name">res.config.settings.view.petty.cash</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form" position="inside">

                <app name="account" string="Accounting">

                    <block title="Petty Cash" name="petty_cash_block">
                        <setting string="Petty Cash Account">
                            <field name="petty_cash_account_id"/>
                        </setting>

                        <setting string="Input VAT Account">
                            <field name="input_vat_account_id"/>
                        </setting>

                        <setting string="Petty Cash Journal">
                            <field name="petty_cash_journal_id"/>
                        </setting>
                    </block>

                </app>

            </xpath>

        </field>
    </record>

</odoo>
