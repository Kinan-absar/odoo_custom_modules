<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   <record id="view_petty_cash_config_wizard_form" model="ir.ui.view">
        <field name="name">petty.cash.config.wizard.form</field>
        <field name="model">petty.cash.config.wizard</field>
        <field name="arch" type="xml">
            <form string="Petty Cash Configuration">
                <sheet>
                    <group>
                        <field name="petty_cash_account_id"/>
                        <field name="input_vat_account_id"/>
                        <field name="petty_cash_journal_id"/>
                    </group>
                    <footer>
                        <button name="action_save"
                                string="Save"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                special="cancel"
                                class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
