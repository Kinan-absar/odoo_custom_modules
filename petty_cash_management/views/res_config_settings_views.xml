<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_petty_cash" model="ir.ui.view">
        <field name="name">res.config.settings.view.petty.cash</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form" position="inside">

                <setting string="Petty Cash"
                         help="Configure default accounts and journals for petty cash operations"
                         module="base">

                    <group>

                        <field name="petty_cash_account_id"/>
                        <field name="input_vat_account_id"/>
                        <field name="petty_cash_journal_id"/>

                    </group>

                </setting>

            </xpath>

        </field>
    </record>

</odoo>
