<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_petty_cash_settings_form" model="ir.ui.view">
        <field name="name">petty.cash.settings.form</field>
        <field name="model">petty.cash.settings</field>
        <field name="arch" type="xml">
            <form string="Petty Cash Settings">
                <group>
                    <field name="petty_cash_account_id"/>
                    <field name="input_vat_account_id"/>
                    <field name="petty_cash_journal_id"/>
                </group>

                <footer>
                    <button string="Save"
                            type="object"
                            name="action_save"
                            class="btn-primary"/>

                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_petty_cash_settings" model="ir.actions.act_window">
        <field name="name">Petty Cash Settings</field>
        <field name="res_model">petty.cash.settings</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
