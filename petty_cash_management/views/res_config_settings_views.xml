<odoo>
    <record id="view_petty_cash_settings_form" model="ir.ui.view">
        <field name="name">petty.cash.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Petty Cash Settings">
                <group>
                    <field name="petty_cash_account_id"/>
                    <field name="input_vat_account_id"/>
                    <field name="petty_cash_journal_id"/>
                </group>

                <footer>
                    <button string="Save" type="object" name="execute" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
