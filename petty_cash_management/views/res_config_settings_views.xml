<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_petty_cash" model="ir.ui.view">
        <field name="name">res.config.settings.view.petty.cash</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- Insert inside the Accounting / Invoicing app settings -->
            <xpath expr="//app[@name='account']" position="inside">

                <block title="Petty Cash">
                    <setting string="Petty Cash Account" company_dependent="1">
                        <field name="petty_cash_account_id"/>
                    </setting>

                    <setting string="Input VAT Account" company_dependent="1">
                        <field name="input_vat_account_id"/>
                    </setting>

                    <setting string="Petty Cash Journal" company_dependent="1">
                        <field name="petty_cash_journal_id"/>
                    </setting>
                </block>

            </xpath>

        </field>
    </record>

</odoo>
