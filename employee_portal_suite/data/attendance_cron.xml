<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="ir_cron_attendance_auto_checkout" model="ir.cron">
        <field name="name">Attendance Auto Checkout</field>

        <!-- REQUIRED for Odoo 18: model_id must be the raw integer -->
        <field name="model_id" ref="model_attendance_geo"/>

        <field name="state">code</field>
        <field name="code">model._cron_auto_checkout()</field>

        <field name="interval_type">hours</field>
        <field name="interval_number">1</field>

        <field name="active">True</field>
    </record>

</odoo>
