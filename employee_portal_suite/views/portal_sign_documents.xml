<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="portal_sign_documents_page">
    <t t-call="employee_portal_suite.employee_portal_layout">

        <div class="container mt-4">

            <h3>Documents to Sign</h3>

            <!-- FILTER BUTTONS -->
            <div class="btn-group mt-3 mb-3">
                <a href="/my/employee/sign?filter=pending"
                   t-att-class="'btn btn-sm ' + ('btn-primary' if current_filter=='pending' else 'btn-outline-primary')">
                    Pending
                </a>
                <a href="/my/employee/sign?filter=signed"
                   t-att-class="'btn btn-sm ' + ('btn-success' if current_filter=='signed' else 'btn-outline-success')">
                    Signed
                </a>
                <a href="/my/employee/sign?filter=rejected"
                   t-att-class="'btn btn-sm ' + ('btn-danger' if current_filter=='rejected' else 'btn-outline-danger')">
                    Rejected
                </a>
            </div>

            <!-- EMPTY STATE -->
            <t t-if="not sign_items">
                <p>No documents found.</p>
            </t>

            <!-- SIGN TABLE -->
            <t t-if="sign_items">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>Request</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <t t-foreach="sign_items" t-as="item">
                            <tr>
                                <!-- FILE NAME -->
                                <td><t t-esc="item.sign_request_id.reference"/></td>

                                <!-- REQUEST NAME -->
                                <td><t t-esc="item.sign_request_id.display_name"/></td>

                                <!-- STATUS BADGE -->
                                <td>
                                    <t t-if="item.state=='sent'">
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    </t>
                                    <t t-if="item.state=='completed'">
                                        <span class="badge bg-success">Signed</span>
                                    </t>
                                    <t t-if="item.state=='canceled'">
                                        <span class="badge bg-danger">Rejected</span>
                                    </t>
                                </td>

                                <!-- ACTIONS -->
                                <td class="text-end">

                                    <!-- VIEW PDF -->
                                    <a t-attf-href="/sign/document/{{ item.sign_request_id.id }}/{{ item.access_token }}?portal=1"
                                       class="btn btn-sm btn-primary" target="_blank">
                                        Sign / View
                                    </a>

                                    <!-- DOWNLOAD COMPLETED PDF -->
                                    <t t-if="item.state=='completed'">
                                        <a t-attf-href="/sign/download/{{ item.sign_request_id.id }}/{{ item.sign_request_id.access_token }}/completed"
                                           class="btn btn-sm btn-outline-secondary" target="_blank">
                                            Download
                                        </a>
                                    </t>

                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>

        </div>

    </t>
</template>

</odoo>
