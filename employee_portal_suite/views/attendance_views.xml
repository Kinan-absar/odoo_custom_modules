<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================================================= -->
    <!-- FORM VIEW                                                  -->
    <!-- ========================================================= -->
    <record id="view_attendance_geo_form" model="ir.ui.view">
        <field name="name">attendance.geo.form</field>
        <field name="model">attendance.geo</field>
        <field name="arch" type="xml">

            <form string="Attendance Geo Record">
                <sheet>

                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="state" readonly="1"/>
                            <field name="distance_meters" readonly="1"/>
                        </group>

                        <group string="Check-In">
                            <field name="check_in_time" readonly="1"/>
                            <field name="check_in_lat" readonly="1"/>
                            <field name="check_in_lng" readonly="1"/>
                        </group>

                        <group string="Check-Out">
                            <field name="check_out_time" readonly="1"/>
                            <field name="check_out_lat" readonly="1"/>
                            <field name="check_out_lng" readonly="1"/>
                        </group>
                    </group>

                    <group string="Metadata" colspan="4">
                        <field name="device_info" readonly="1"/>
                        <field name="ip_address" readonly="1"/>
                    </group>

                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </sheet>
            </form>

        </field>
    </record>

    <!-- ========================================================= -->
    <!-- LIST VIEW                                                  -->
    <!-- ========================================================= -->
    <record id="view_attendance_geo_list" model="ir.ui.view">
        <field name="name">attendance.geo.list</field>
        <field name="model">attendance.geo</field>
        <field name="arch" type="xml">

            <list>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="check_in_time"/>
                <field name="check_out_time"/>
                <field name="distance_meters"/>
            </list>

        </field>
    </record>

    <!-- ========================================================= -->
    <!-- SEARCH VIEW                                                -->
    <!-- ========================================================= -->
    <record id="view_attendance_geo_search" model="ir.ui.view">
        <field name="name">attendance.geo.search</field>
        <field name="model">attendance.geo</field>
        <field name="arch" type="xml">

            <search>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="check_in_time"/>
                <field name="check_out_time"/>
            </search>

        </field>
    </record>

    <!-- ========================================================= -->
    <!-- WINDOW ACTION (ONLY ONE!)                                  -->
    <!-- ========================================================= -->
    <record id="action_attendance_geo" model="ir.actions.act_window">
        <field name="name">Attendance Geo</field>
        <field name="res_model">attendance.geo</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
