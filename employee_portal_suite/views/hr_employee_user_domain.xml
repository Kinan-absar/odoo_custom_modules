<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_employee_form_force_portal_user" model="ir.ui.view">
        <field name="name">hr.employee.form.force.portal.user</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <!-- Replace the Related User field to allow ONLY portal users -->
            <xpath expr="//page[@name='hr_settings']//field[@name='user_id']"
                   position="replace">
                <field name="user_id"
                       string="Related User"
                       widget="many2one_avatar_user"
                       domain="[('share','=',True)]"
                       context="{'default_create_employee_id': id}"/>
            </xpath>

        </field>
    </record>

</odoo>
