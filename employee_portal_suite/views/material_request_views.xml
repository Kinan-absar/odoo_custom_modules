<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================================================= -->
    <!-- MATERIAL REQUEST FORM VIEW                                -->
    <!-- ========================================================= -->
    <record id="view_material_request_form" model="ir.ui.view">
        <field name="name">material.request.form</field>
        <field name="model">material.request</field>

        <field name="arch" type="xml">
            <form string="Material Request">
                    <header>
                        <button name="action_submit" type="object"
                                string="Submit"
                                class="oe_stat_button"
                                invisible="state != 'draft'"/>

                        <button name="action_purchase" type="object"
                                string="Purchase Rep Approve"
                                class="oe_stat_button"
                                invisible="state != 'purchase'"/>

                        <button name="action_store" type="object"
                                string="Store Approve"
                                class="oe_stat_button"
                                invisible="state != 'store'"/>

                        <button name="action_project_manager" type="object"
                                string="PM Approve"
                                class="oe_stat_button"
                                invisible="state != 'project_manager'"/>

                        <button name="action_director" type="object"
                                string="Director Approve"
                                class="oe_stat_button"
                                invisible="state != 'director'"/>

                        <button name="action_ceo" type="object"
                                string="CEO Approve"
                                class="oe_stat_button"
                                invisible="state != 'ceo'"/>

                        <button name="action_reject" type="object"
                                string="Reject"
                                class="oe_stat_button btn-danger"
                                invisible="state == 'approved'"/>
                        <button name="%(employee_portal_suite.material_request_pdf)d"
                                type="action"
                                class="btn-primary"
                                icon="fa-print"
                                string="Print PDF"/>
                        <button name="action_create_po"
                                type="object"
                                string="Create Purchase Order"
                                class="btn btn-primary"
                                invisible="['state', '!=', 'approved']"/>

                    </header>
                <sheet>
                    
                    <!-- TITLE + STATUS -->
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>

                        <label for="state" class="oe_inline"/>
                        <div class="oe_inline">
                            <field name="state" widget="statusbar"
                                   statusbar_visible="draft,purchase,store,project_manager,director,ceo,approved,rejected"/>
                        </div>
                    </div>

                    
                    <!-- NOTEBOOK -->
                    <notebook>

                        <!-- DETAILS TAB -->
                        <page string="Request Details">
                            <group>
                                <group>
                                    <field name="employee_id" readonly="1"/>
                                    <field name="request_date"/>
                                    <field name="worksite"/>
                                    <field name="delivery_date"/>
                                </group>
                            </group>
                        </page>

                        <!-- MATERIAL LINES TAB -->
                        <page string="Materials">
                            <group>
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="item_name"/>
                                        <field name="qty_required"/>
                                        <field name="uom_id"/>
                                    </list>
                                </field>
                            </group>
                        </page>

                        <!-- APPROVAL TIMELINE TAB -->
                        <page string="Approval Timeline">

                            <group string="Purchase Representative">
                                <field name="purchase_approved_by" readonly="1"/>
                                <field name="purchase_approved_date" readonly="1"/>
                                <field name="purchase_comment"/>
                            </group>

                            <group string="Store Manager">
                                <field name="store_approved_by" readonly="1"/>
                                <field name="store_approved_date" readonly="1"/>
                                <field name="store_comment"/>
                            </group>

                            <group string="Project Manager">
                                <field name="project_manager_approved_by" readonly="1"/>
                                <field name="project_manager_approved_date" readonly="1"/>
                                <field name="project_manager_comment"/>
                            </group>

                            <group string="Projects Director">
                                <field name="director_approved_by" readonly="1"/>
                                <field name="director_approved_date" readonly="1"/>
                                <field name="director_comment"/>
                            </group>

                            <group string="CEO">
                                <field name="ceo_approved_by" readonly="1"/>
                                <field name="ceo_approved_date" readonly="1"/>
                                <field name="ceo_comment"/>
                            </group>


                        </page>

                    </notebook>
                </sheet> 
                <chatter/>
            </form>
        </field>

    </record>

    <!-- ========================================================= -->
    <!-- LIST VIEW                                                  -->
    <!-- ========================================================= -->
    <record id="view_material_request_list" model="ir.ui.view">
        <field name="name">material.request.list</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="worksite"/>
                <field name="delivery_date"/>
                <field name="state"/>
                <field name="request_date"/>
            </list>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- SEARCH VIEW                                                -->
    <!-- ========================================================= -->
    <record id="view_material_request_search" model="ir.ui.view">
        <field name="name">material.request.search</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="worksite"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- WINDOW ACTION                                              -->
    <!-- ========================================================= -->
    <record id="action_material_request" model="ir.actions.act_window">
        <field name="name">Material Requests</field>
        <field name="res_model">material.request</field>
        <field name="view_mode">list,form</field>

    </record>

</odoo>
