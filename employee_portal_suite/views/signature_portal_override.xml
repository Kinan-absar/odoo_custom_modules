<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Override the signing page layout -->
    <template id="employee_portal_sign_layout" inherit_id="sign.doc_sign">

        <!-- Replace default portal layout with employee portal layout -->
        <xpath expr="//t[@t-call='portal.portal_layout']" position="replace">
            <t t-call="employee_portal_suite.employee_portal_layout"/>
        </xpath>

    </template>

</odoo>
