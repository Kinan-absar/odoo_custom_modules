<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="portal_sign_summary_override"
              inherit_id="sign.sign_portal_my_request"
              name="Employee Portal Layout for Sign Summary">

        <!-- Wrap the entire content inside portal layout -->
        <xpath expr="//t[@t-call='portal.portal_layout']" position="replace">
            <t t-call="employee_portal_suite.employee_portal_layout">
                
                <!-- IMPORTANT: restore the inner content -->
                <div id="wrap" class="o_portal_wrap">
                    <t t-raw="0"/>
                </div>

            </t>
        </xpath>

    </template>

</odoo>
