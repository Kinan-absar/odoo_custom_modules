<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Completely wrap the signature summary page in our employee layout
         WITHOUT touching portal.portal_layout internally -->
    <template id="portal_sign_summary_override"
              inherit_id="sign.sign_portal_my_request"
              name="Employee Portal Wrapper for Signature Summary">

        <!-- Surround the whole page output with the employee layout -->
        <xpath expr="." position="replace">
            <t t-call="employee_portal_suite.employee_portal_layout">
                <div id="wrap" class="o_portal_wrap">
                    <t t-raw="0"/>
                </div>
            </t>
        </xpath>

    </template>

</odoo>
