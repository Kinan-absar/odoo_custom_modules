<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="employee_portal_layout">

<t t-call="web.layout">

    <style>

/* =======================================
   PROFESSIONAL LIGHT BLUE NAVBAR (NO PURPLE)
   ======================================= */

.ep-navbar {
    background: #E6F4FF; /* Light blue */
    padding: 14px 0;
    border-bottom: 2px solid #B8D8FF;
    font-family: 'Inter', sans-serif;
}

.nav-container {
    display: flex;
    align-items: center;
    gap: 14px;
    flex-wrap: wrap;
}

/* ===== NAV BUTTON STYLE — CLEAN WHITE PILLS ===== */
.ep-link,
.ep-dropdown-toggle {
    background: white;
    color: #1F2937; /* dark slate text */
    border: 1px solid #CDD5DF;
    padding: 8px 16px;
    border-radius: 999px; /* pill */
    font-size: 15px;
    font-weight: 500;
    text-decoration: none;
    transition: 0.2s;
    cursor: pointer;
}

.ep-link:hover,
.ep-dropdown-toggle:hover {
    background: #DCEBFF; /* soft hover blue */
    border-color: #AFC8FF;
}

/* ACTIVE PAGE */
.ep-link.active {
    background: #DCEBFF;
    border-color: #AFC8FF;
}

/* ===== DROPDOWN MENU ===== */
.ep-dropdown {
    position: relative;
}

.ep-dropdown-menu {
    display: none;
    position: absolute;
    background: white;
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    min-width: 200px;
    padding: 6px 0;
    margin-top: 6px;
    box-shadow: 0 4px 14px rgba(0,0,0,0.08);
    z-index: 100;
}

.ep-dropdown:hover .ep-dropdown-menu {
    display: block;
}

.ep-sub-link {
    display: block;
    padding: 10px 16px;
    color: #1F2937 !important;
    font-size: 14px;
    text-decoration: none;
}

.ep-sub-link:hover {
    background: #DCEBFF;
}

/* ===== LOGOUT BUTTON (PROFESSIONAL BLUE) ===== */
.ep-logout {
    margin-left: auto;
    background: #1D4ED8; /* BLUE */
    color: white;
    padding: 8px 18px;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    transition: 0.2s;
}

.ep-logout:hover {
    background: #1E40AF;
}

/* ===== MOBILE RESPONSIVE ===== */
.ep-nav-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 28px;
    color: #1F2937;
    cursor: pointer;
}

@media (max-width: 768px) {
    .ep-nav-toggle {
        display: block;
    }

    .ep-nav-links {
        display: none;
        flex-direction: column;
        width: 100%;
        background: #E6F4FF;
        padding: 10px 0;
        border-top: 1px solid #B8D8FF;
    }

    body.nav-open .ep-nav-links {
        display: flex;
    }

    .ep-link,
    .ep-dropdown-toggle,
    .ep-sub-link {
        width: 100%;
        text-align: center;
    }

    .ep-dropdown-menu {
        position: relative;
        min-width: 100%;
        box-shadow: none;
    }

    .ep-logout {
        width: 100%;
        text-align: center;
        margin-left: 0;
    }
}

    </style>

    <t t-call-assets="web.assets_frontend"/>

    <!-- ===== NAVIGATION BAR ===== -->
    <nav class="ep-navbar">
        <div class="container nav-container">

            <!-- MOBILE BURGER -->
            <button class="ep-nav-toggle" onclick="document.body.classList.toggle('nav-open')">☰</button>

            <!-- NAV LINKS -->
            <div class="ep-nav-links">

                <a href="/my" class="ep-link">Dashboard</a>

                <a href="/my/employee/requests" class="ep-link">Employee Requests</a>
                <a href="/my/employee/requests/new" class="ep-link">New Employee Request</a>

                <a href="/my/employee/material" class="ep-link">Material Requests</a>
                <a href="/my/employee/material/new" class="ep-link">New Material Request</a>

                <a href="/my/employee/attendance" class="ep-link">Attendance</a>

                <!-- ===== DROPDOWN: APPROVALS ===== -->
                <t t-if="
                    request.env.user.has_group('employee_portal_suite.group_employee_portal_manager')
                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_hr')
                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_finance')
                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                    or request.env.user.has_group('employee_portal_suite.group_mr_purchase_rep')
                    or request.env.user.has_group('employee_portal_suite.group_mr_store_manager')
                    or request.env.user.has_group('employee_portal_suite.group_mr_project_manager')
                    or request.env.user.has_group('employee_portal_suite.group_mr_projects_director')
                ">
                    <div class="ep-dropdown">
                        <button class="ep-dropdown-toggle">Approvals ▾</button>

                        <div class="ep-dropdown-menu">

                            <!-- Employee Approvals -->
                            <t t-if="
                                request.env.user.has_group('employee_portal_suite.group_employee_portal_manager')
                                or request.env.user.has_group('employee_portal_suite.group_employee_portal_hr')
                                or request.env.user.has_group('employee_portal_suite.group_employee_portal_finance')
                                or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                            ">
                                <a href="/my/employee/approvals" class="ep-sub-link ep-link">Employee Approvals</a>
                            </t>

                            <!-- Material Approvals -->
                            <t t-if="
                                request.env.user.has_group('employee_portal_suite.group_mr_purchase_rep')
                                or request.env.user.has_group('employee_portal_suite.group_mr_store_manager')
                                or request.env.user.has_group('employee_portal_suite.group_mr_project_manager')
                                or request.env.user.has_group('employee_portal_suite.group_mr_projects_director')
                                or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                            ">
                                <a href="/my/employee/material/approvals" class="ep-sub-link ep-link">Material Approvals</a>
                            </t>

                        </div>
                    </div>
                </t>

            </div>

            <!-- LOGOUT BUTTON -->
            <a class="ep-logout" href="/web/session/logout">Logout</a>

        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <main>
        <div id="wrap" class="container mt-4 mb-5">
            <t t-raw="0"/>
        </div>
    </main>


</t>
</template>

</odoo>
