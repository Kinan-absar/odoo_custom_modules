<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="clean_sign_summary"
              inherit_id="sign.sign_portal_my_request">
        
        <!-- Inject CSS to hide header, footer, breadcrumbs ONLY on this page -->
        <xpath expr="//t[@t-call='portal.portal_layout']" position="inside">
            <style>
                /* Hide website header */
                header.o_header_standard {
                    display: none !important;
                }
                /* Hide website footer */
                footer.o_footer {
                    display: none !important;
                }
                /* Hide breadcrumbs */
                .o_portal_breadcrumb {
                    display: none !important;
                }
            </style>
        </xpath>

    </template>

</odoo>
