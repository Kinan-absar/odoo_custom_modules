<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="clean_sign_summary" inherit_id="sign.sign_portal_my_request">

        <!-- Inject CSS safely into the main layout call -->
        <xpath expr="//t[@t-call='portal.portal_layout']" position="inside">
            <style>
                header.o_header_standard {
                    display: none !important;
                }
                footer.o_footer {
                    display: none !important;
                }
                .o_portal_submenu,
                .o_portal_breadcrumb,
                nav.breadcrumb,
                .o_portal_pager {
                    display: none !important;
                }
                .ep-back-btn {
                    margin-bottom: 20px;
                }
            </style>
        </xpath>

        <!-- Insert BACK button before the main title -->
        <xpath expr="//h3[1]" position="before">
            <a href="/my/employee" class="btn btn-secondary ep-back-btn">
                ‚Üê Back to Employee Portal
            </a>
        </xpath>

    </template>

</odoo>
