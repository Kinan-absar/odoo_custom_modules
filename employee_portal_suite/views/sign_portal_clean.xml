<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="clean_sign_summary"
              inherit_id="sign.sign_portal_my_request">

        <!-- Hide the website header -->
        <xpath expr="//header" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>

        <!-- Hide the footer -->
        <xpath expr="//footer" position="replace">
            <footer t-if="False"/>
        </xpath>

        <!-- Hide the breadcrumbs -->
        <xpath expr="//div[contains(@class,'o_portal_breadcrumb')]" position="replace">
            <div t-if="False"/>
        </xpath>

        <!-- Remove top margin caused by removing header -->
        <xpath expr="//div[@id='wrap']" position="attributes">
            <attribute name="style">margin-top:0 !important;</attribute>
        </xpath>

    </template>

</odoo>
