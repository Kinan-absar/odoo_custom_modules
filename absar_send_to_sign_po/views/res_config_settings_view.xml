<odoo>
    <record id="res_config_settings_view_form_sign_po" model="ir.ui.view">
        <field name="name">res.config.settings.send.to.sign.po</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- Odoo 17 compatible insertion point -->
            <xpath expr="//div[hasclass('o_settings_container')]" position="inside">

                <div class="app_settings_block" data-string="Send to Sign Workflow" string="Send to Sign Workflow">
                    <h2>Purchase Order Signing Workflow</h2>

                    <div class="row mt16 o_settings_container">

                        <div class="col-lg-6 col-md-12">
                            <label for="project_director_partner_id"/>
                            <div>
                                <field name="project_director_partner_id"/>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12">
                            <label for="ceo_partner_id"/>
                            <div>
                                <field name="ceo_partner_id"/>
                            </div>
                        </div>

                    </div>
                </div>

            </xpath>

        </field>
    </record>
</odoo>
