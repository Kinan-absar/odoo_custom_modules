<odoo>
    <record id="res_config_settings_view_form_sign_po" model="ir.ui.view">
        <field name="name">res.config.settings.send.to.sign.po</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- Insert inside the Purchase settings block -->
            <xpath expr="//div[hasclass('app_settings_block')]" position="inside">

                <div class="o_setting_box">
                    <div class="o_setting_left">
                        <label for="project_director_partner_id"
                               string="Project Director Signer"/>
                    </div>
                    <div class="o_setting_right">
                        <field name="project_director_partner_id"/>
                    </div>
                </div>

                <div class="o_setting_box">
                    <div class="o_setting_left">
                        <label for="ceo_partner_id"
                               string="CEO Signer"/>
                    </div>
                    <div class="o_setting_right">
                        <field name="ceo_partner_id"/>
                    </div>
                </div>

            </xpath>

        </field>
    </record>
</odoo>
