<odoo>
    <record id="view_po_form_send_to_sign" model="ir.ui.view">
        <field name="name">purchase.order.form.send_to_sign</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Add signature state in the header -->
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button type="object"
                        name="action_send_to_sign"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        modifiers='{"invisible": [["state", "!=", "purchase"], ["signature_state", "!=", "draft"]] }'>
                    <div>Send to Sign</div>
                </button>

            </xpath>

        </field>
    </record>
</odoo>
