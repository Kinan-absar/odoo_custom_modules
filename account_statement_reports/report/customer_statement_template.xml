<odoo>
    <template id="customer_statement_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">

                    <h2>Customer Statement</h2>
                    <p>
                        <strong>Customer:</strong> <t t-esc="doc['partner'].name"/><br/>
                        <strong>From:</strong> <t t-esc="doc['date_from']"/>  
                        <strong>To:</strong> <t t-esc="doc['date_to']"/>
                    </p>

                    <table class="table table-sm o_main_table" style="width:100%; border:1px solid #000;">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Document</th>
                                <th>Reference</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc['lines']" t-as="l">
                                <tr>
                                    <td><t t-esc="l['date']"/></td>
                                    <td><t t-esc="l['name']"/></td>
                                    <td><t t-esc="l['ref']"/></td>
                                    <td><t t-esc="l['debit']"/></td>
                                    <td><t t-esc="l['credit']"/></td>
                                    <td><t t-esc="l['balance']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>
