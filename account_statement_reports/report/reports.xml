<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- =============================== -->
        <!--         CUSTOMER REPORT         -->
        <!-- =============================== -->
        <record id="asr_customer_statement_report" model="ir.actions.report">
            <field name="name">Customer Statement</field>
            <field name="model">customer.statement</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_statement_reports.asr_customer_statement</field>
            <field name="print_report_name">'Customer Statement - %s' % (object.partner_id.name)</field>
        </record>

        <!-- =============================== -->
        <!--          VENDOR REPORT          -->
        <!-- =============================== -->
        <record id="asr_vendor_statement_report" model="ir.actions.report">
            <field name="name">Vendor Statement</field>
            <field name="model">vendor.statement</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_statement_reports.asr_vendor_statement</field>
            <field name="print_report_name">'Vendor Statement - %s' % (object.partner_id.name)</field>
        </record>

    </data>
</odoo>
