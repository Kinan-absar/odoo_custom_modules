<odoo>

    <!-- Allow only Accountant users to run statements -->
    <record id="model_customer_statement_wizard_rule" model="ir.rule">
        <field name="name">Customer Statement Access</field>
        <field name="model_id" ref="model_customer_statement_wizard"/>
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
    </record>

    <record id="model_vendor_statement_wizard_rule" model="ir.rule">
        <field name="name">Vendor Statement Access</field>
        <field name="model_id" ref="model_vendor_statement_wizard"/>
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
    </record>

</odoo>
