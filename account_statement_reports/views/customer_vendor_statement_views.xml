<odoo>
    <!-- Smart button on customer form -->
    <record id="view_partner_form_customer_statement" model="ir.ui.view">
        <field name="name">res.partner.customer.statement.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_customer_statement_wizard)d"
                        type="action"
                        string="Print Statement"
                        attrs="{'invisible': [('customer_rank', '=', 0)]}"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
