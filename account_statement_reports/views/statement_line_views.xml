<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================================================= -->
    <!--            CUSTOMER STATEMENT LINE VIEWS                  -->
    <!-- ========================================================= -->

    <record id="view_customer_statement_line_list" model="ir.ui.view">
        <field name="name">customer.statement.line.list</field>
        <field name="model">customer.statement.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="move"/>
                <field name="reference"/>
                <field name="due_date"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance"/>
            </list>
        </field>
    </record>

    <record id="view_customer_statement_line_form" model="ir.ui.view">
        <field name="name">customer.statement.line.form</field>
        <field name="model">customer.statement.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="statement_id"/>
                        <field name="date"/>
                        <field name="move"/>
                        <field name="reference"/>
                        <field name="due_date"/>
                        <field name="debit"/>
                        <field name="credit"/>
                        <field name="balance"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- ========================================================= -->
    <!--             VENDOR STATEMENT LINE VIEWS                   -->
    <!-- ========================================================= -->

    <record id="view_vendor_statement_line_list" model="ir.ui.view">
        <field name="name">vendor.statement.line.list</field>
        <field name="model">vendor.statement.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="move"/>
                <field name="reference"/>
                <field name="due_date"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance"/>
            </list>
        </field>
    </record>

    <record id="view_vendor_statement_line_form" model="ir.ui.view">
        <field name="name">vendor.statement.line.form</field>
        <field name="model">vendor.statement.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="statement_id"/>
                        <field name="date"/>
                        <field name="move"/>
                        <field name="reference"/>
                        <field name="due_date"/>
                        <field name="debit"/>
                        <field name="credit"/>
                        <field name="balance"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
