<odoo>

    <!-- =======================
         Record Rule for Vendors
         ======================= -->
    <record id="vendor_invoice_portal_rule" model="ir.rule">
        <field name="name">Vendor Access to Own Invoices</field>
        <field name="model_id" ref="model_portal_vendor_invoice"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
    </record>

    <!-- =======================
         Internal User Rule
         ======================= -->
    <record id="vendor_invoice_internal_rule" model="ir.rule">
        <field name="name">Internal Users Full Access to Vendor Invoices</field>
        <field name="model_id" ref="model_portal_vendor_invoice"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

</odoo>
